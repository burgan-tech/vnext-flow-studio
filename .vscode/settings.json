{
  // Spell checker configuration for workflow files
  "cSpell.ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "**/dist-web/**",
    "**/*.flow.json",
    "**/workflows/**/*.json",
    "**/Workflows/**/*.json"
  ],

  // Configure spell checker for Base64 encoded content and multilingual labels
  "cSpell.languageSettings": [
    {
      "languageId": "json",
      "ignoreRegExpList": [
        // Base64 encoded mapping code
        "\"code\":\\s*\"[A-Za-z0-9+/=]{100,}\"",
        // Label values in any language (including Turkish)
        "\"label\":\\s*\"[^\"]*\"",
        // Language codes
        "\"language\":\\s*\"[^\"]*\"",
        // Entire labels array with content
        "\"labels\":\\s*\\[[^\\]]*\\]"
      ]
    }
  ],

  // File-specific overrides for workflow files (regular .json files)
  "cSpell.overrides": [
    {
      "filename": "**/*.json",
      "ignoreRegExpList": [
        "\"label\":\\s*\"[^\"]*\"",
        "\"language\":\\s*\"[^\"]*\"",
        "\"labels\":\\s*\\[[^\\]]*\\]"
      ]
    }
  ],

  // File associations for workflow files
  "files.associations": {
    "*.flow.json": "json",
    "**/workflows/**/*.json": "json",
    "**/Workflows/**/*.json": "json",
    "*.diagram.json": "json"
  },

  // JSON schema validation - handled by extension
  // Schemas are registered programmatically by the extension from bundled files

  // Disable spell check for large text blocks in JSON
  "cSpell.maxNumberOfProblems": 10,
  "cSpell.maxDuplicateProblems": 3,
  "cSpell.checkLimit": 500,

  // Workflow-specific spell check words
  "cSpell.words": [
    "workflow",
    "workflows",
    "amorphie",
    "burgan",
    "vnext",
    "triggerType",
    "stateType",
    "versionStrategy",
    "onEntries",
    "onExits",
    "executionTasks",
    "mappings",
    "subFlow",
    "taskRef",
    "schemaRef",
    "Dapr",
    "csx",
    "IntelliSense",
    "IMapping",
    "IConditionMapping",
    "ScriptContext",
    "ScriptResponse",
    "WorkflowTask",
    "HttpTask",
    // Common Turkish workflow labels
    "Başlat",
    "Başla",
    "Bitir",
    "Devam",
    "Durdur",
    "İptal",
    "Onayla",
    "Reddet",
    "Gönder",
    "Kaydet",
    "Sil",
    "Güncelle",
    "Yeni",
    "Düzenle",
    "İşlem",
    "Durum",
    "Sonuç",
    "Hata",
    "Uyarı",
    "Bilgi",
    "Yayınla",
    "Yayın",
    "Publish",
    "Akış",
    "Geçiş",
    "Onay",
    "Ret",
    "Bekle",
    "Tamamla",
    "Kontrol",
    "Doğrula"
  ],

  // Editor settings for workflow files
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.tabSize": 2
  },

  // Enable JSON validation
  "json.validate.enable": true,

  // File exclusions for performance
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/dist-web": true,
    "**/.git": true
  },

  // Search exclusions
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/dist-web": true,
    "**/*.log": true
  },

  // Amorphie runtime environment configurations
  "amorphie.environments": {
    "local": {
      "id": "local",
      "name": "Local Development",
      "baseUrl": "http://localhost:4201",
      "domain": "core"
    }
  },
  "amorphie.activeEnvironment": "local",
  "amorphie.basePath": "/Users/U05366/Documents/GitHub/vnext-sys-flow/core",
  "amorphie.cache.enabled": true,
  "amorphie.cache.ttlMs": 300000
}
