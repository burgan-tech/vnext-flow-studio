  "tests": [
    {
      "name": "Basic order transformation",
      "input": {
        "orderNumber": "ORD-12345",
        "customer": {
          "id": "CUST-001",
          "name": "John Doe"
        },
        "items": [
          {
            "productId": "PROD-A",
            "quantity": 2,
            "price": 29.99
          }
        ]
      },
      "expected": {
        "invoiceNumber": "ORD-12345",
        "customerId": "CUST-001",
        "customerName": "John Doe",
        "lineItems": [
          {
            "productId": "PROD-A",
            "qty": 2,
            "unitPrice": 29.99,
            "lineTotal": 59.98
          }
        ],
        "subtotal": 59.98,
        "tax": 0,
        "total": 59.98
      }
    }
  ]
