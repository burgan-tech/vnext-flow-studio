{
  "name": "amorphie-flow-studio",
  "displayName": "Amorphie Flow Studio",
  "publisher": "your-org",
  "version": "2.1.8",
  "description": "Visual editor for Amorphie Workflow Projects",
  "license": "MIT",
  "author": "Amorphie Flow Studio",
  "repository": {
    "type": "git",
    "url": "https://github.com/amorphie/amorphie-flow-studio.git"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "workflow",
    "visual-editor",
    "amorphie",
    "typescript",
    "react",
    "monaco-editor"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist/extension.js",
    "dist/extension.js.map",
    "dist-web/**",
    "schemas/**",
    "LICENSE"
  ],
  "contributes": {
    "commands": [
      {
        "command": "flowEditor.open",
        "title": "Amorphie: Open Workflow"
      },
      {
        "command": "flowEditor.createWorkflow",
        "title": "Amorphie: Create Workflow"
      },
      {
        "command": "flowEditor.freezeVersions",
        "title": "Amorphie: Freeze Versions"
      },
      {
        "command": "flowEditor.createMapper",
        "title": "Amorphie: Create Mapper"
      },
      {
        "command": "mapperEditor.open",
        "title": "Amorphie: Open Mapper"
      },
      {
        "command": "taskEditor.open",
        "title": "Amorphie: Open Task Editor",
        "icon": "$(edit)"
      },
      {
        "command": "taskEditor.openAsJson",
        "title": "Amorphie: Open Task as JSON",
        "icon": "$(json)"
      },
      {
        "command": "taskEditor.newTask",
        "title": "Amorphie: Create Task",
        "icon": "$(add)"
      },
      {
        "command": "graphAnalysis.buildLocalGraph",
        "title": "Amorphie: Build Local Graph"
      },
      {
        "command": "graphAnalysis.fetchRuntimeGraph",
        "title": "Amorphie: Fetch Runtime Graph"
      },
      {
        "command": "graphAnalysis.diffGraphs",
        "title": "Amorphie: Compare Graphs"
      },
      {
        "command": "graphAnalysis.impactAnalysis",
        "title": "Amorphie: Analyze Impact"
      },
      {
        "command": "graphAnalysis.deployChanges",
        "title": "Amorphie: Deploy Changes"
      },
      {
        "command": "amorphie.openSettings",
        "title": "Amorphie: Open Settings"
      },
      {
        "command": "flowEditor.openVisualDiff",
        "title": "Amorphie: Open Visual Diff",
        "icon": "$(split-horizontal)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .json && (resourceFilename =~ /\\.flow\\.json$/ || resourceFilename =~ /-subflow\\.json$/ || resourceFilename =~ /-workflow\\.json$/ || resourceDirname =~ /(^|\\\\|\\/)workflows(\\\\|\\/|$)/ || resourceDirname =~ /(^|\\\\|\\/)Workflows(\\\\|\\/|$)/)",
          "command": "flowEditor.open",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .json && (resourceFilename =~ /\\.flow\\.json$/ || resourceFilename =~ /-subflow\\.json$/ || resourceFilename =~ /-workflow\\.json$/ || resourceDirname =~ /(^|\\\\|\\/)workflows(\\\\|\\/|$)/ || resourceDirname =~ /(^|\\\\|\\/)Workflows(\\\\|\\/|$)/)",
          "command": "flowEditor.openVisualDiff",
          "group": "3_compare@1"
        },
        {
          "when": "resourceFilename =~ /\\.mapper\\.json$/",
          "command": "mapperEditor.open",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .json && resourceDirname =~ /(^|\\\\|\\/)Tasks(\\\\|\\/|$)/",
          "command": "taskEditor.open",
          "group": "navigation"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "flowEditor.createWorkflow",
          "group": "2_workspace@1"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "flowEditor.createMapper",
          "group": "2_workspace@2"
        },
        {
          "when": "explorerResourceIsFolder && resourceDirname =~ /(^|\\\\|\\/)Tasks(\\\\|\\/|$)/ || resourceFilename == 'Tasks'",
          "command": "taskEditor.newTask",
          "group": "2_workspace@3"
        }
      ],
      "editor/title": [
        {
          "when": "resourceExtname == .json && (resourceFilename =~ /\\.flow\\.json$/ || resourceFilename =~ /-subflow\\.json$/ || resourceFilename =~ /-workflow\\.json$/ || resourceDirname =~ /(^|\\\\|\\/)workflows(\\\\|\\/|$)/ || resourceDirname =~ /(^|\\\\|\\/)Workflows(\\\\|\\/|$)/)",
          "command": "flowEditor.open",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .json && (resourceFilename =~ /\\.flow\\.json$/ || resourceFilename =~ /-subflow\\.json$/ || resourceFilename =~ /-workflow\\.json$/ || resourceDirname =~ /(^|\\\\|\\/)workflows(\\\\|\\/|$)/ || resourceDirname =~ /(^|\\\\|\\/)Workflows(\\\\|\\/|$)/)",
          "command": "flowEditor.openVisualDiff",
          "group": "navigation"
        },
        {
          "when": "resourceFilename =~ /\\.mapper\\.json$/",
          "command": "mapperEditor.open",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "flowEditor.createWorkflow",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "flowEditor.createMapper",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "flowEditor.canvas",
        "displayName": "Amorphie Flow Studio",
        "selector": [
          {
            "filenamePattern": "*.flow.json"
          },
          {
            "filenamePattern": "*-subflow.json"
          },
          {
            "filenamePattern": "*-workflow.json"
          },
          {
            "filenamePattern": "**/workflows/**/*.json"
          },
          {
            "filenamePattern": "**/Workflows/**/*.json"
          }
        ],
        "priority": "option"
      },
      {
        "viewType": "mapperEditor.canvas",
        "displayName": "Amorphie Mapper",
        "selector": [
          {
            "filenamePattern": "*.mapper.json"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "vnext.taskQuickEditor",
        "displayName": "vNext Task Quick Config",
        "selector": [
          {
            "filenamePattern": "**/Tasks/*.json"
          },
          {
            "filenamePattern": "**/Tasks/**/*.json"
          }
        ],
        "priority": "option"
      }
    ],
    "configuration": {
      "title": "Amorphie",
      "properties": {
        "amorphie.environments": {
          "type": "object",
          "default": {},
          "markdownDescription": "Runtime environment configurations. Each key is an environment ID (e.g., `dev`, `test`, `prod`).\n\nExample:\n```json\n{\n  \"dev\": {\n    \"id\": \"dev\",\n    \"name\": \"Development\",\n    \"baseUrl\": \"http://localhost:4201\",\n    \"domain\": \"core\"\n  },\n  \"test\": {\n    \"id\": \"test\",\n    \"name\": \"Test\",\n    \"baseUrl\": \"https://test.example.com\",\n    \"domain\": \"core\",\n    \"auth\": {\n      \"type\": \"bearer\",\n      \"token\": \"your-token\"\n    }\n  }\n}\n```",
          "additionalProperties": {
            "type": "object",
            "required": [
              "id",
              "baseUrl",
              "domain"
            ],
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the environment"
              },
              "name": {
                "type": "string",
                "description": "Display name for the environment"
              },
              "baseUrl": {
                "type": "string",
                "description": "Base URL of the runtime environment (e.g., http://localhost:4201)"
              },
              "domain": {
                "type": "string",
                "description": "Domain name for workflows (e.g., core)"
              },
              "auth": {
                "type": "object",
                "description": "Authentication configuration",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "bearer",
                      "basic"
                    ],
                    "description": "Authentication type"
                  },
                  "token": {
                    "type": "string",
                    "description": "Bearer token (when type is 'bearer')"
                  },
                  "username": {
                    "type": "string",
                    "description": "Username (when type is 'basic')"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password (when type is 'basic')"
                  }
                }
              },
              "timeout": {
                "type": "number",
                "description": "Request timeout in milliseconds",
                "default": 30000
              },
              "verifySsl": {
                "type": "boolean",
                "description": "Whether to verify SSL certificates",
                "default": true
              }
            }
          }
        },
        "amorphie.activeEnvironment": {
          "type": "string",
          "default": null,
          "description": "ID of the active environment"
        },
        "amorphie.basePath": {
          "type": "string",
          "default": null,
          "description": "Base path to scan for workflow components. Can be absolute or relative to workspace root (e.g., 'core' or '/absolute/path'). If not set, uses workspace folder."
        },
        "amorphie.cache.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable caching for runtime graph fetches"
        },
        "amorphie.cache.ttlMs": {
          "type": "number",
          "default": 300000,
          "description": "Cache time-to-live in milliseconds (default: 5 minutes)"
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "package": "vsce package --no-dependencies"
  },
  "dependencies": {
    "@amorphie-flow-studio/core": "*",
    "@amorphie-flow-studio/graph-core": "*"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "esbuild": "^0.23.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  }
}
