{
  "name": "amorphie-flow-studio",
  "displayName": "Amorphie Flow Studio",
  "publisher": "your-org",
  "version": "0.3.0",
  "description": "Visual editor for Amorphie Workflow Projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/amorphie/amorphie-flow-studio.git"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": ["Other"],
    "activationEvents": [
      "onLanguage:json",
      "onCommand:flowEditor.open"
    ],
  "main": "./dist/extension.js",
  "files": [
    "dist/extension.js",
    "dist/extension.js.map",
    "dist-web/**",
    "schemas/**",
    "LICENSE"
  ],
  "contributes": {
    "commands": [
      {
        "command": "flowEditor.open",
        "title": "Open in Amorphie Flow Studio"
      },
      {
        "command": "flowEditor.freezeVersions",
        "title": "Freeze Versions (Lock)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .json && (resourceFilename =~ /\\.flow\\.json$/ || resourcePath =~ /workflows/)",
          "command": "flowEditor.open",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "when": "resourceExtname == .json && (resourceFilename =~ /\\.flow\\.json$/ || resourcePath =~ /workflows/)",
          "command": "flowEditor.open",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "flowEditor.canvas",
        "displayName": "Amorphie Flow Studio",
        "selector": [
          {
            "filenamePattern": "*.flow.json"
          },
          {
            "filenamePattern": "**/workflows/**/*.json"
          }
        ],
        "priority": "option"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ["**/*.flow.json", "**/workflows/**/*.json"],
        "url": "./schemas/workflow-definition.schema.json"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "package": "vsce package --no-dependencies"
  },
  "dependencies": {
    "@nextcredit/core": "*"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0",
    "@types/vscode": "^1.92.0"
  }
}
