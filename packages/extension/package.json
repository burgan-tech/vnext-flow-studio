{
  "name": "amorphie-flow-studio",
  "displayName": "Amorphie Flow Studio",
  "publisher": "your-org",
  "version": "1.2.1",
  "description": "Visual editor for Amorphie Workflow Projects",
  "license": "MIT",
  "author": "Amorphie Flow Studio",
  "repository": {
    "type": "git",
    "url": "https://github.com/amorphie/amorphie-flow-studio.git"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "workflow",
    "visual-editor",
    "amorphie",
    "typescript",
    "react",
    "monaco-editor"
  ],
  "activationEvents": [
    "onCommand:mapperEditor.open"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist/extension.js",
    "dist/extension.js.map",
    "dist-web/**",
    "schemas/**",
    "LICENSE"
  ],
  "contributes": {
    "commands": [
      {
        "command": "flowEditor.open",
        "title": "Open in Amorphie Flow Studio"
      },
      {
        "command": "flowEditor.createWorkflow",
        "title": "Create New Workflow"
      },
      {
        "command": "flowEditor.freezeVersions",
        "title": "Freeze Versions (Lock)"
      },
      {
        "command": "flowEditor.createMapper",
        "title": "New Amorphie Mapper"
      },
      {
        "command": "mapperEditor.open",
        "title": "Open in Amorphie Mapper"
      },
      {
        "command": "taskEditor.openAsJson",
        "title": "Open Task as JSON",
        "icon": "$(json)"
      },
      {
        "command": "taskEditor.newTask",
        "title": "New Task Definition",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .json && (resourceFilename =~ /\\.flow\\.json$/ || resourceFilename =~ /-subflow\\.json$/ || resourceFilename =~ /-workflow\\.json$/ || resourceDirname =~ /(^|\\\\|\\/)workflows(\\\\|\\/|$)/ || resourceDirname =~ /(^|\\\\|\\/)Workflows(\\\\|\\/|$)/)",
          "command": "flowEditor.open",
          "group": "navigation"
        },
        {
          "when": "resourceFilename =~ /\\.mapper\\.json$/",
          "command": "mapperEditor.open",
          "group": "navigation"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "flowEditor.createWorkflow",
          "group": "2_workspace@1"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "flowEditor.createMapper",
          "group": "2_workspace@2"
        },
        {
          "when": "explorerResourceIsFolder && resourceDirname =~ /(^|\\\\|\\/)Tasks(\\\\|\\/|$)/ || resourceFilename == 'Tasks'",
          "command": "taskEditor.newTask",
          "group": "2_workspace@3"
        }
      ],
      "editor/title": [
        {
          "when": "resourceExtname == .json && (resourceFilename =~ /\\.flow\\.json$/ || resourceFilename =~ /-subflow\\.json$/ || resourceFilename =~ /-workflow\\.json$/ || resourceDirname =~ /(^|\\\\|\\/)workflows(\\\\|\\/|$)/ || resourceDirname =~ /(^|\\\\|\\/)Workflows(\\\\|\\/|$)/)",
          "command": "flowEditor.open",
          "group": "navigation"
        },
        {
          "when": "resourceFilename =~ /\\.mapper\\.json$/",
          "command": "mapperEditor.open",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "flowEditor.createWorkflow",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "flowEditor.createMapper",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "flowEditor.canvas",
        "displayName": "Amorphie Flow Studio",
        "selector": [
          {
            "filenamePattern": "*.flow.json"
          },
          {
            "filenamePattern": "*-subflow.json"
          },
          {
            "filenamePattern": "*-workflow.json"
          },
          {
            "filenamePattern": "**/workflows/**/*.json"
          },
          {
            "filenamePattern": "**/Workflows/**/*.json"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "mapperEditor.canvas",
        "displayName": "Amorphie Mapper",
        "selector": [
          {
            "filenamePattern": "*.mapper.json"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "vnext.taskQuickEditor",
        "displayName": "vNext Task Quick Config",
        "selector": [
          {
            "filenamePattern": "**/Tasks/*.json"
          },
          {
            "filenamePattern": "**/Tasks/**/*.json"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "package": "vsce package --no-dependencies"
  },
  "dependencies": {
    "@amorphie-flow-studio/core": "*"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0",
    "@types/vscode": "^1.92.0"
  }
}
