{
  "key": "applicant-application-active",
  "domain": "applicant",
  "flow": "sys-tasks",
  "version": "1.0.0",
  "metadata": {
    "title": "Applicant Application Active Check",
    "description": "Checks if an applicant's application is in active status",
    "author": "NextCredit Team",
    "created": "2024-01-01T00:00:00.000Z",
    "modified": "2024-01-01T00:00:00.000Z"
  },
  "specification": {
    "method": "GET",
    "url": "https://api.nextcredit.com/applicants/{applicantId}/application/status",
    "headers": {
      "Authorization": "Bearer {token}",
      "Content-Type": "application/json"
    },
    "timeout": "PT30S",
    "retries": 3,
    "expectedStatus": [200, 404],
    "responseMapping": {
      "isActive": "$.data.status === 'active'",
      "applicationId": "$.data.id",
      "lastUpdated": "$.data.lastUpdated"
    }
  },
  "inputs": [
    {
      "name": "applicantId",
      "type": "string",
      "required": true,
      "description": "The unique identifier of the applicant"
    },
    {
      "name": "token",
      "type": "string",
      "required": true,
      "description": "Authentication token"
    }
  ],
  "outputs": [
    {
      "name": "isActive",
      "type": "boolean",
      "description": "Whether the application is active"
    },
    {
      "name": "applicationId",
      "type": "string",
      "description": "The application identifier"
    },
    {
      "name": "lastUpdated",
      "type": "string",
      "format": "date-time",
      "description": "When the application was last updated"
    }
  ]
}